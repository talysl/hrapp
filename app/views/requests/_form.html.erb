<%= form_for([@employee, @employee.requests.build]) do |f| %>
  <p>
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date, :order => [:day, :month, :year] %><br>
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date, :order => [:day, :month, :year] %>
  </p>
  <p>
    <%= f.label :considerations %><br>
    <%= f.text_area :considerations %>
  </p>
  <p>
    <%=f.submit%>
  </p>
<% end %>

